<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_sign_up_ext"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EditInfosFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintBottom_toTopOf="@+id/scroll_view_edit_user_infos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:id="@+id/scroll_view_edit_user_infos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_sign_up"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_edit_user_info_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/prompt_name"
                app:layout_constraintStart_toStartOf="@+id/edit_text_edit_user_info_name"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_text_edit_user_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/prompt_name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_edit_user_info_name_label" />

            <TextView
                android:id="@+id/text_view_edit_user_info_surname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/prompt_surname"
                app:layout_constraintStart_toStartOf="@+id/edit_text_edit_user_info_surname"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_edit_user_info_name" />

            <TextView
                android:id="@+id/text_view_edit_user_info_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/prompt_phone_number"
                app:layout_constraintStart_toStartOf="@+id/edit_text_edit_user_info_telephone"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_edit_user_info_surname" />

            <EditText
                android:id="@+id/edit_text_edit_user_info_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/prompt_surname"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_edit_user_info_surname_label" />

            <EditText
                android:id="@+id/edit_text_edit_user_info_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/prompt_phone_number"
                android:inputType="phone"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_edit_user_info_phone_label" />

            <TextView
                android:id="@+id/text_view_edit_user_info_country_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/prompt_country"
                app:layout_constraintStart_toStartOf="@+id/edit_text_edit_user_info_country"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_edit_user_info_telephone" />

            <EditText
                android:id="@+id/edit_text_edit_user_info_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/prompt_country"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_edit_user_info_country_label" />

            <TextView
                android:id="@+id/text_view_edit_user_info_city_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/prompt_city"
                app:layout_constraintStart_toStartOf="@+id/edit_text_edit_user_info_city"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_edit_user_info_country" />

            <EditText
                android:id="@+id/edit_text_edit_user_info_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/prompt_city"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_edit_user_info_city_label" />

            <TextView
                android:id="@+id/text_view_edit_user_info_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/prompt_address"
                app:layout_constraintStart_toStartOf="@+id/edit_text_edit_user_info_address"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_edit_user_info_city" />

            <EditText
                android:id="@+id/edit_text_edit_user_info_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/prompt_address"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_edit_user_info_address_label" />

            <Button
                android:id="@+id/button_edit_user_info_confirm_changes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:text="@string/button_save_changes_generic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/edit_text_edit_user_info_address"
                app:layout_constraintStart_toStartOf="@+id/edit_text_edit_user_info_address"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_edit_user_info_address" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>