<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BAAEAE"
    tools:context=".fragment.UserInfoFragment">

    <TextView
        android:id="@+id/text_view_userinfo_namesurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_user_info_12_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_userinfo_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_user_info_18_75"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_user_info_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guideline_user_info_12_5" />

    <TextView
        android:id="@+id/text_view_userinfo_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="Country"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_user_info_18_75"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_user_info_75"
        app:layout_constraintStart_toStartOf="@+id/vertical_guideline_user_info_50"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guideline_user_info_12_5" />

    <TextView
        android:id="@+id/text_view_userinfo_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="City"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_user_info_18_75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vertical_guideline_user_info_75"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guideline_user_info_12_5" />

    <TextView
        android:id="@+id/text_view_userinfo_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="Address"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_user_info_25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vertical_guideline_user_info_50"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guideline_user_info_18_75" />

    <TextView
        android:id="@+id/text_view_userinfo_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="Telephone"
        android:textColor="#424242"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_user_info_25"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_user_info_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guideline_user_info_18_75"
        app:layout_constraintVertical_bias="0.629" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline_user_info_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline_user_info_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline_user_info_75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline_user_info_12_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.125" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline_user_info_18_75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1875" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline_user_info_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline_user_info_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#E8E0E0"
        app:cardCornerRadius="4dp"
        app:cardElevation="30dp"
        app:cardMaxElevation="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guideline_user_info_25">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_info_constraint_layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_user_info_edit_user_info"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_user_info_edit_user_info"
                app:layout_constraintBottom_toTopOf="@+id/button_user_info_add_specific_infos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <Button
                android:id="@+id/button_user_info_add_specific_infos"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_user_info_edit_user_info_specific"
                app:layout_constraintBottom_toTopOf="@+id/button_user_info_contacts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_user_info_edit_user_info" />

            <Button
                android:id="@+id/button_user_info_contacts"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_user_info_edit_user_contacts"
                app:layout_constraintBottom_toTopOf="@+id/button_user_info_message_preferences"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_user_info_add_specific_infos" />

            <Button
                android:id="@+id/button_user_info_message_preferences"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_user_info_edit_user_message_preferences"
                app:layout_constraintBottom_toTopOf="@+id/button_user_info_priorities"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_user_info_contacts" />

            <Button
                android:id="@+id/button_user_info_priorities"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_user_info_edit_app_priorities"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_user_info_message_preferences" />

            <Button
                android:id="@+id/button_user_info_logout"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F44336"
                android:onClick="logOut"
                android:text="@string/button_user_info_logout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>